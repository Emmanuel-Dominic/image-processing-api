{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": "./src",
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "spec"]
}
